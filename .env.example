# Rodent Detection System - Environment Variables
# Copy this file to .env and update with your actual credentials

# ==========================================
# TWILIO SMS CONFIGURATION
# ==========================================
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here_32_characters
TWILIO_FROM_NUMBER=+12025551234
ALERT_PHONE_NUMBER=+19175551234

# ==========================================
# EMAIL CONFIGURATION (SMTP)
# ==========================================
# For Gmail: Enable 2FA and create app-specific password
# For Outlook: Use your regular password
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here
FROM_EMAIL=your_email@gmail.com
ALERT_EMAIL=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ==========================================
# PUSHOVER PUSH NOTIFICATION
# ==========================================
# Get these from: https://pushover.net
PUSHOVER_API_TOKEN=azxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PUSHOVER_USER_KEY=uxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==========================================
# TELEGRAM BOT (Alternative to Pushover)
# ==========================================
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# ==========================================
# WYZE CAMERA CONFIGURATION
# ==========================================
# For Wyze Bridge or Cloud API access
WYZE_EMAIL=your_wyze_account@email.com
WYZE_PASSWORD=your_wyze_password
WYZE_CAMERA_NAME=Front_Door_Camera

# For RTSP (if enabled on camera)
RTSP_USERNAME=admin
RTSP_PASSWORD=password123
RTSP_URL=rtsp://192.168.1.100:554/live

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================
# Timezone for timestamps (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TIMEZONE=America/New_York

# Debug mode (set to False for production)
DEBUG=False

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# SQLite database path (relative to project root)
DATABASE_PATH=data/detections.db

# Days to retain detection records
RETENTION_DAYS=30

# ==========================================
# DETECTION CONFIGURATION
# ==========================================
# Override config.yaml settings (optional)
# CONFIDENCE_THRESHOLD=0.55
# NMS_THRESHOLD=0.4
# FRAME_RATE=1
# FRAME_SKIP=30

# ==========================================
# PERFORMANCE TUNING
# ==========================================
# Number of worker threads
WORKER_THREADS=4

# Max queue size for alerts
MAX_ALERT_QUEUE=100

# Use ONNX model for better performance (true/false)
USE_ONNX=true

# ==========================================
# ADVANCED SETTINGS
# ==========================================
# Auto-restart on failure
AUTO_RESTART=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=300

# Startup delay (seconds)
STARTUP_DELAY=10

# ==========================================
# OPTIONAL WEB INTERFACE
# ==========================================
# Enable web dashboard (true/false)
ENABLE_WEB_UI=false
WEB_UI_PORT=5000
WEB_UI_HOST=0.0.0.0

# Basic auth for web interface
WEB_USERNAME=admin
WEB_PASSWORD=changeme123

# ==========================================
# NOTES FOR CONFIGURATION
# ==========================================
# 1. SMS (Twilio):
#    - Sign up at https://www.twilio.com
#    - Get free trial account with $15 credit
#    - Purchase a phone number ($1/month)
#    - Find Account SID and Auth Token in console
#
# 2. Email (Gmail):
#    - Enable 2-factor authentication
#    - Generate app-specific password
#    - Use app password instead of regular password
#
# 3. Push Notifications (Pushover):
#    - Create account at https://pushover.net
#    - Create application to get API token
#    - Install Pushover app on phone
#    - One-time purchase of $5 for app
#
# 4. Telegram (Free alternative):
#    - Message @BotFather on Telegram
#    - Create new bot with /newbot
#    - Get bot token
#    - Add bot to group/channel
#    - Get chat ID
#
# 5. Wyze Camera:
#    - Use official app to set up camera
#    - Enable recording to SD card
#    - Optional: Enable RTSP in settings
#    - Or use Wyze Bridge for streaming